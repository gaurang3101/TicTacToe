<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "#008080">


    <androidx.gridlayout.widget.GridLayout android:id = "@+id/grid"
        android:layout_width = "409dp"
        android:layout_height = "409dp"
        android:layout_marginBottom = "60dp"
        android:animateLayoutChanges = "true"
        android:background = "@drawable/board"
        app:columnCount = "3"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent"
        app:rowCount = "3">


        <ImageView android:id = "@+id/pos0"
            android:layout_width = "110dp"
            android:layout_height = "110dp"
            android:layout_margin = "10dp"
            android:layout_marginLeft = "12dp"
            android:onClick = "chance"
            android:tag = "0"
            app:layout_column = "0"
            app:layout_row = "0" />

        <ImageView android:id = "@+id/pos1"
            android:layout_width = "110dp"
            android:layout_height = "110dp"
            android:layout_margin = "10dp"
            android:layout_marginLeft = "23dp"
            android:layout_marginTop = "10dp"
            android:onClick = "chance"
            android:tag = "1"
            app:layout_column = "1"
            app:layout_row = "0" />

        <ImageView android:id = "@+id/pos2"
            android:layout_width = "110dp"
            android:layout_height = "110dp"
            android:layout_margin = "10dp"
            android:layout_marginLeft = "15dp"
            android:layout_marginTop = "10dp"
            android:onClick = "chance"
            android:tag = "2"
            app:layout_column = "2"
            app:layout_row = "0" />

        <ImageView android:id = "@+id/pos3"
            android:layout_width = "110dp"
            android:layout_height = "110dp"
            android:layout_margin = "10dp"
            android:layout_marginLeft = "12dp"
            android:layout_marginTop = "20dp"
            android:onClick = "chance"
            android:tag = "3"
            app:layout_column = "0"
            app:layout_row = "1" />

        <ImageView android:id = "@+id/pos4"
            android:layout_width = "110dp"
            android:layout_height = "110dp"
            android:layout_margin = "10dp"
            android:layout_marginLeft = "23dp"
            android:layout_marginTop = "20dp"
            android:onClick = "chance"
            android:tag = "4"
            app:layout_column = "1"
            app:layout_row = "1" />

        <ImageView android:id = "@+id/pos5"
            android:layout_width = "110dp"
            android:layout_height = "110dp"
            android:layout_margin = "10dp"
            android:layout_marginLeft = "15dp"
            android:layout_marginTop = "20dp"
            android:onClick = "chance"
            android:tag = "5"
            app:layout_column = "2"
            app:layout_row = "1" />

        <ImageView android:id = "@+id/pos6"
            android:layout_width = "110dp"
            android:layout_height = "110dp"
            android:layout_margin = "10dp"
            android:layout_marginLeft = "12dp"
            android:layout_marginTop = "20dp"
            android:onClick = "chance"
            android:tag = "6"
            app:layout_column = "0"
            app:layout_row = "2" />

        <ImageView android:id = "@+id/pos7"
            android:layout_width = "110dp"
            android:layout_height = "110dp"
            android:layout_margin = "10dp"
            android:layout_marginLeft = "23dp"
            android:layout_marginTop = "20dp"
            android:onClick = "chance"
            android:tag = "7"
            app:layout_column = "1"
            app:layout_row = "2" />

        <ImageView android:id = "@+id/pos8"
            android:layout_width = "110dp"
            android:layout_height = "110dp"
            android:layout_margin = "10dp"
            android:layout_marginLeft = "15dp"
            android:layout_marginTop = "20dp"
            android:onClick = "chance"
            android:tag = "8"
            app:layout_column = "2"
            app:layout_row = "2" />
    </androidx.gridlayout.widget.GridLayout>

    <Button android:id = "@+id/reset"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "30dp"
        android:background = "#000000"
        android:onClick = "resetGame"
        android:text = "Reset Game"
        android:textColor = "#008080"
        android:textSize = "20sp"
        android:visibility = "invisible"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/grid" />

    <TextView android:id = "@+id/winnertextView"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginBottom = "30dp"
        android:text = "TextView"
        android:textColor = "#FFFFFF"
        android:textSize = "20sp"
        android:visibility = "invisible"
        app:layout_constraintBottom_toTopOf = "@+id/grid"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent" />

    <Button android:id = "@+id/playAgain"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "8dp"
        android:background = "#000000"
        android:onClick = "playAgain"
        android:text = "Play Again"
        android:textColor = "#008080"
        android:visibility = "invisible"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/reset" />


</androidx.constraintlayout.widget.ConstraintLayout>

